{
  "name": "root",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "workspaces": [
    "libraries/*",
    "services/*",
    "localstack"
  ],
  "scripts": {
    "build": "yarn lerna run build",
    "build:watch": "yarn tsc -b -w",
    "clean": "yarn lerna run clean",
    "mrproper": "yarn clean; yarn lerna clean -y; yarn rimraf .build-cache node_modules",
    "sort-json-files": "yarn sortjson *.json && yarn prettier -w *.json && yarn lerna run sort-json-files",
    "update-references": "yarn update-ts-references && yarn sortjson tsconfig.base.json tsconfig.json localstack/tsconfig.json {libraries,services}/*/tsconfig.json && yarn prettier -w tsconfig.base.json tsconfig.json localstack/tsconfig.json {libraries,services}/*/tsconfig.json",
    "prisma-push": "(cd libraries/mysql/prisma/ && prisma db push --accept-data-loss)",
    "prisma-pull": "(cd libraries/mysql/prisma/ && prisma db pull)",
    "prisma-generate-client": "(cd libraries/mysql/prisma/ && prisma generate)",
    "update-cleandb-inits": "cd helper-scripts && ./update-cleandb-docker-init-files.sh",
    "localstack-setup": "(cd localstack/terraform/ && terraform apply -auto-approve)",
    "start:all___": "yarn lerna run start --include-dependencies --parallel --stream -- -- -r .env",
    "start:all": "yarn lerna run start --include-dependencies --parallel --stream",
    "drizzle:generate": "lerna run drizzle:generate",
    "drizzle:migrate": "lerna run drizzle:migrate",
    "drizzle:push": "lerna run drizzle:push",
    "drizzle:seed": "lerna run drizzle:seed",
    "typeorm:gen": "yarn lerna run typeorm:gen -- -- -r .env",
    "typeorm:create": "yarn lerna run typeorm:create -- -- -r .env",
    "typeorm:revert": "yarn lerna run typeorm:revert -- -- -r .env",
    "typeorm:run": "yarn lerna run typeorm:run -- -- -r .env",
    "typeorm:seed": "yarn lerna run typeorm:seed -- -- -r .env"
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "tsx": "^4.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13",
    "@commitlint/config-conventional": "^13",
    "@jest/types": "^27.0.6",
    "@types/lodash": "^4",
    "@types/node": "^20",
    "@types/node-fetch": "^2",
    "esbuild": "^0.19.2",
    "esbuild-plugin-copy": "^2.1",
    "husky": "^7.0.1",
    "jest": "26.6.0",
    "jest-config": "^27",
    "json-sort-cli": "^1",
    "lerna": "^6",
    "lodash": "^4",
    "node-fetch": "^2",
    "prettier": "^2",
    "rimraf": "^3",
    "source-map-support": "^0.5.19",
    "ts-jest": "^27",
    "tsx": "^4.17.0",
    "typescript": "^4",
    "update-ts-references": "^2"
  },
  "engines": {
    "node": ">= 20"
  },
  "packageManager": "yarn@3.1.1"
}
