{
  "name": "root",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "workspaces": [
    "libraries/*",
    "services/*",
    "localstack"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "clean": "bun run --filter='*' clean",
    "localstack-setup": "(cd localstack/terraform/ && terraform apply -auto-approve)",
    "mrproper": "bun run clean; bun run --filter='*' clean; rm -rf .build-cache node_modules",
    "sort-json-files": "sortjson *.json && prettier -w *.json && bun run --filter='*' sort-json-files",
    "start:all": "bun run --filter=@remrob/api --filter=@remrob/nativeapp start",
    "start:api": "bun run --filter @remrob/api start",
    "start:prod": "bun run --filter @remrob/api prod",
    "start:nativeapp": "bun run --filter @remrob/nativeapp start",
    "update-references": "update-ts-references && sortjson tsconfig.base.json tsconfig.json localstack/tsconfig.json {libraries,services}/*/tsconfig.json && prettier -w tsconfig.base.json tsconfig.json localstack/tsconfig.json {libraries,services}/*/tsconfig.json"
  },
  "devDependencies": {
    "@types/lodash": "^4",
    "@types/node": "^20",
    "@types/node-fetch": "^2",
    "json-sort-cli": "^1",
    "lodash": "^4",
    "node-fetch": "^2",
    "prettier": "^2",
    "typescript": "^5.5.4",
    "update-ts-references": "^2"
  },
  "packageManager": "bun@1.1.24"
}
