{
  "name": "@remrob/drizzle",
  "version": "0.0.0",
  "description": "Everything Drizzle-related",
  "keywords": [
    "drizzle"
  ],
  "homepage": "https://bitbucket.org/remrob/r2ecosystem",
  "repository": "https://bitbucket.org/remrob/r2ecosystem",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Muslim Idris <gelamu@gmail.com>",
  "main": "src/drizzle.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "bun run clean; tsc -b",
    "clean": "rm -rf dist node_modules ../../.build-cache/drizzle.tsbuildinfo",
    "drizzle:createdb": "bun run --env-file=../../.env.api.dev src/createdb.ts",
    "drizzle:generate": "bun run --env-file=../../.env.api.dev drizzle-kit generate --name init_db",
    "drizzle:migrate": "bun run --env-file=../../.env.api.dev drizzle-kit migrate",
    "drizzle:push": "bun run --env-file=../../.env.api.dev drizzle-kit push --force",
    "drizzle:seed": "bun run --env-file=../../.env.api.dev src/seed.ts",
    "prepack": "bun run build",
    "sort-json-files": "sortjson *.json && prettier -w *.json"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "mysql2": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "drizzle-kit": "^0.23.2",
    "json-sort-cli": "^1",
    "prettier": "^2",
    "typescript": "^5.5.4"
  }
}
